{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "https://*/" ,
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.paper.dropbox.com/*"],
      "js": [
        "bootstrap.js",
        "style.js",
        "libs/libs.js",
        "libs/sha.js",
        "components/popup.js",
        "components/encryption.js",
        "components/grammar.js",
        "components/ui-modifications.js",
        "components/bookmarks.js",
        "components/sidemenu.js",
        "script.js"
      ]
    }
  ]

}
